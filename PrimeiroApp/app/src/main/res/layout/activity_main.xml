<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/activity_background"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:src="@drawable/running">

    <ImageView
        android:layout_marginTop="10dp"
        android:layout_width="100dp"
        android:layout_height="120dp"
        android:src="@drawable/running"
        android:layout_gravity="center"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="IMC"
        android:textSize="48sp"
        android:textColor="#ffffff"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"/>

    <EditText
        android:id="@+id/edit_text_peso"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:maxLines="1"
        android:inputType="number"
        android:hint="  Digite seu peso..."
        android:textColor="@color/white"
        android:background="@drawable/activity_border"
        android:layout_marginBottom="20dp"
        android:padding="20px"
        android:textColorHint="@color/white"
        android:drawableLeft="@drawable/ic_baseline_person_24"/>

    <EditText
        android:id="@+id/edit_text_altura"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:maxLines="1"
        android:inputType="numberDecimal"
        android:hint="  Digite sua altura..."
        android:textColor="@color/white"
        android:background="@drawable/activity_border"
        android:layout_marginBottom="20dp"
        android:padding="20px"
        android:textColorHint="@color/white"
        android:drawableLeft="@drawable/ic_baseline_fitness_center_24"/>

    <Button
        android:id="@+id/button_calcular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:text="Calcular IMC"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/text_view_resultado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0.0"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:textSize="48sp"
        android:textColor="@color/white"
        android:background="@drawable/activity_circle"
        android:gravity="center"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Peso Ideal"
        android:textSize="24sp"
        android:textColor="#A6A6A6"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"/>
</LinearLayout>